<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher's Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <!--Header-->
    <header id="header">
       <nav>
        <div class="container">
            <div class="text-center">
                <a href="/"class="nav-brand text-dark">Student Dashboard</a>
                <a href="/logout"class="nav-brand" style="color: white; position:relative; right: -500px; font-size: 20px"> | Logout</a>
            </div>
        </div>
       </nav> 
    </header>
    <!--/Header-->

    <!--Main Site-->
    <main id="site-main">
        <div class="container">
 
            <h1 class="head">Remaining Tasks</h1>

           
            <!--form handling-->
            <form action="/teacher/adduser" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>description</th>
                            <th>Deadline</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(result=>{%>
                            <tr>
                                <td><%= result.name%></td>
                                <td><%= result.description%></td>
                                <td><%= result.deadline.toLocaleString()%></td>
                                <td>
    
                                    <a href="#" class="btn border-shadow update">
                                        Submit
                                    </a>

                                </td>
                            </tr>
                        <%} ); %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
    <!--/Main Site-->


</body>
</html>